<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.95"
        android:background="#202127">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ExpandableListView
                    android:id="@+id/departmentlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:childDivider="#800000FF"
                    android:divider="#800000FF"
                    android:dividerHeight="1dp"
                    android:fadeScrollbars="false"
                    android:background="@drawable/mylistpadding"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:text="人員名單"
                   android:textColor="@color/white_color"
                   android:textSize="20dp"
                   />
                <ListView
                    android:id="@+id/memberlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:childDivider="#80FF0000"
                    android:divider="#800000FF"
                    android:dividerHeight="1dp"
                    android:fadeScrollbars="false"
                    android:background="@drawable/mylistpadding"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <Button
                        android:id="@+id/lastpage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="←"/>
                    <TextView
                        android:id="@+id/nowpage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textColor="@color/white_color"/>
                    <TextView
                        android:id="@+id/totalpage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/white_color"/>
                    <Button
                        android:id="@+id/nextpage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="→"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical"
            android:background="@drawable/mylistpadding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="選取名單"
                    android:textColor="@color/white_color"
                    android:textSize="20dp"
                    />

                <ListView
                    android:id="@+id/confirmlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:childDivider="#80FF0000"
                    android:divider="#800000FF"
                    android:dividerHeight="1dp"
                    android:fadeScrollbars="false"
                    />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="選取單位"
                    android:textColor="@color/white_color"
                    android:textSize="20dp"
                    />
                <ListView
                    android:id="@+id/confirmgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:childDivider="#80FF0000"
                    android:divider="#800000FF"
                    android:dividerHeight="1dp"
                    android:fadeScrollbars="false"
                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="bottom"
        android:background="#202127">
        <Button
            android:id="@+id/nextstep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"/>
    </LinearLayout>

</LinearLayout>
