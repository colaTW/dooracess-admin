<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@drawable/title4"
            />

        <ImageButton
            android:id="@+id/B_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backhome"
            android:text="Button" />


    </LinearLayout>
    <ImageButton
        android:id="@+id/messagepage1"
        style="@style/button_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_gravity="fill"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/mes6"
        android:cropToPadding="true" />

    <ImageButton
        android:id="@+id/messagepage2"
        style="@style/button_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/mes1"
        android:cropToPadding="true"
        />

    <Button
        android:id="@+id/messagepage3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的意見" />

    <Button
        android:id="@+id/messagepage4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的維修" />

</LinearLayout>
